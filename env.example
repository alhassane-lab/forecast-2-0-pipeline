# ============================================================================
# FILE: .env.example
# ============================================================================
# Variables d'environnement pour le pipeline Forecast 2.0
# Copier ce fichier vers .env et remplir avec vos vraies valeurs

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=eu-west-1
AWS_PROFILE=
S3_RAW_BUCKET=greenandcoop-raw-data
S3_PROCESSED_BUCKET=greenandcoop-processed-data

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=forecast_2_0
MONGODB_COLLECTION=weather_measurements
MONGODB_TLS=
MONGODB_TLS_ALLOW_INVALID_CERTS=

# Optional: MongoDB local (docker compose --profile local-mongo)
MONGO_DB=forecast_2_0
MONGO_APP_USERNAME=forecast_app
MONGO_APP_PASSWORD=forecast_app_password
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=rootpassword

# Airbyte Configuration (optionnel)
AIRBYTE_URL=http://localhost:8000
AIRBYTE_USERNAME=airbyte
AIRBYTE_PASSWORD=password

# Pipeline Configuration
PIPELINE_LOG_LEVEL=INFO
PIPELINE_STRICT_MODE=false
